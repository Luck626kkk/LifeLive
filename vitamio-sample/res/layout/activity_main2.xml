<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/io.vov.vitamio.demo"
    android:orientation="vertical"
    tools:context=".MainActivity2">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/mediacontroller_bg_pressed"
        app2:tabIndicatorColor="@color/c1olorAccent"
        app2:tabSelectedTextColor="@color/c1olorAccent"
        app2:tabTextColor="@color/colorPrimaryDark"
        app:tabBackground="@drawable/selected"
        app:tabIndicatorColor="#66ff33"
        app:tabIndicatorHeight="20dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#CC33FF"
        app:tabTextColor="@color/colorPrimary" />


</LinearLayout>